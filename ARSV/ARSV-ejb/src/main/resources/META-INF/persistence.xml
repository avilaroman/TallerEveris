      <class>cl.dgac.arsv.model.ArsvObjetoVuelo</class>
      <class>cl.dgac.arsv.model.ArsvPaisOrigen</class>
      <class>cl.dgac.arsv.model.ArsvProgramaActividad</class>
      <class>cl.dgac.arsv.model.ArsvRol</class>
      <class>cl.dgac.arsv.model.ArsvRuta</class>

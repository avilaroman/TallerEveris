      <class>cl.dgac.arsv.model.OperacionPascua</class>
      <class>cl.dgac.arsv.model.Solicitud</class>
      <class>cl.dgac.arsv.model.SolicitudArriboSobrevuelo</class>
      <class>cl.dgac.arsv.model.SolicitudOperacion</class>
      <class>cl.dgac.arsv.model.SolicitudExtPermanencia</class>      
      
      <properties>
      	 <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      	 <property name="hibernate.connection.autocommit" value="false"/>
         <property name="hibernate.hbm2ddl.auto" value="validate" />
         <property name="hibernate.show_sql" value="false" />         
         <property name="hibernate.format_sql" value="true"/>
      </properties>
   </persistence-unit>
</persistence>